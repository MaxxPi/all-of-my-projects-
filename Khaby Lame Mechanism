<body>
  <img id="frame" src="" alt="frame" />
  <div id="slider-container">
    <input type="range" id="fps-slider" min="2" max="50" value="2" />
    <div id="fps-label">swipe this switch and the khaby lame mechanism goes faster</div>
  </div>

<script>
  const urls = [
    'https://lh7-rt.googleusercontent.com/formsz/AN7BsVCdu0W4XuPuozsu-B2pTZDYG8cZLsZ_sYwmR9kaE_nqkuWtXBuSC7rTgXkABiaL2MK8DyU_ohYXopeVgTSaWTvjZ1VfX2Bzb-ZjtX0sxxggKNQhPe6a8rn-UwMq_UP4XTfKa-gTMn6VW4pBu82egy3eMZbVTe5HgxNwGw?key=hBa_f5H1CDSctiRBKc0myQ',
    'https://lh7-rt.googleusercontent.com/formsz/AN7BsVBpkZL1k2hDQklUzxh0RzKRmzVdL1deKxqfaMxm7IjAlDE2pXo3bZ1N5-h3Exy8HMV2SLrV4LCZhfVFqAqf6b6J2-EZca5HOvMipi-dpDf5RfBzN227wqvoxxnUIf5CdGAAXgi4WKElTIVIeYzaX2ywabf8jkDEz_Tiew?key=hBa_f5H1CDSctiRBKc0myQ',
    'https://lh7-rt.googleusercontent.com/formsz/AN7BsVC9TYIVyBA5hvMDP2B5IxzuXoJx2QH7P68jZDZHhktgwt4ez8wEw9YZRPB2Llq_D6UNIwdoxKs_x98IAVtywlgR6vRaJcTHni3umaMJvzdyxK68ORGmd3EXI2KbjGpOCIct7lQElVdMRj2sRN1yOvjpehBUtpxv6FlGLA?key=hBa_f5H1CDSctiRBKc0myQ',
    'https://lh7-rt.googleusercontent.com/formsz/AN7BsVCYWESTVucnqslPJZ5j-a4uEZ_x0-1_GpbJJ9rTFxW1jwYKdfYw3tAtGtziw226pwAIM6IJr-1GuzSrwwC4Th8QvYy9Ltg4qSKQlCE6zTi97cZIgqnFoA1x5V0qTmOW6IQcqAGyBpMI9r3Ct8snurC4H8_sd54OcvEteA?key=hBa_f5H1CDSctiRBKc0myQ'
  ];

  const frameEl = document.getElementById('frame');
  const slider = document.getElementById('fps-slider');
  const label = document.getElementById('fps-label');

  let currentFrame = 0;
  let fps = parseInt(slider.value);
  let interval = null;

  function updateFrame() {
    frameEl.src = urls[currentFrame];
    currentFrame = (currentFrame + 1) % urls.length;
  }

  function startAnimation() {
    if (interval) clearInterval(interval);
    interval = setInterval(updateFrame, 1000 / fps);
  }

  slider.addEventListener('input', () => {
    fps = parseInt(slider.value);
    label.textContent = `FPS: ${fps}`;
    startAnimation();
  });

  updateFrame();
  startAnimation();
</script>
