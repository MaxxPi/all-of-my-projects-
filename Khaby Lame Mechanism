  const el = document.getElementById('frame');
  let idx = 0;
  function show(i){ el.src = urls[i]; }
  show(0);

  // change every 500ms => 2 FPS
  setInterval(()=>{
    idx = (idx + 1) % urls.length;
    show(idx);
  }, 500);
